- locals.delete_if { |k, v| v.nil? }

meta[property='og:type'        content='article']

meta[property='og:title'       content=locals[:title]]
meta[property='og:url'         content=locals[:url]]
meta[property='og:image'       content=locals[:image]]
meta[property='og:description' content=locals[:description]]
/meta[property='og:locale'     content='ja_JP']
meta[property='og:site_name'   content=title]

- if locals.has_key? :author
  meta[property='og:author'      content=locals[:author]]
  meta[property='article:author' content=locals[:author]]

meta[property='og:publisher'      content='https://www.facebook.com/hachioji.gc']
meta[property='article:publisher' content='https://www.facebook.com/hachioji.gc']

meta[property='article:published_time' content=locals[:published]]
